#!/bin/sh

JAVA=java
JAVA_OPTS="$JAVA_OPTS"

if [ "x$VTCRYPT_HOME" = "x" ]; then
  if [ -d bin ]; then
    PREFIX=.
  else
    PREFIX=../
  fi
else
  PREFIX="$VTCRYPT_HOME"
fi

CLASSPATH="${PREFIX}/jars/vt-crypt-2.0.jar"
for JAR in `ls ${PREFIX}/lib/*.jar` ; do
  CLASSPATH=$CLASSPATH:$JAR
done

$JAVA $JAVA_OPTS -cp $CLASSPATH \
  edu.vt.middleware.crypt.digest.DigestCli $@
