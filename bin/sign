#!/bin/sh

JAVA=java
JAVA_OPTS="$JAVA_OPTS"

if [ "x$VTCRYPT_HOME" = "x" ]; then
  if [ -d bin ]; then
    PREFIX=
  else
    PREFIX=../
  fi
else
  PREFIX="$VTCRYPT_HOME"
fi

CRYPT_JAR=vt-crypt-2.0.jar
LIBDIR=${PREFIX}lib
CLASSPATH="${PREFIX}jars/${CRYPT_JAR}"
for i in ${LIBDIR}/* ; do
  if [ "${CLASSPATH}" != "" ]; then
    CLASSPATH=${CLASSPATH}:$i
  else
    CLASSPATH=$i
  fi
done

${JAVA} ${JAVA_OPTS} -cp ${CLASSPATH} \
  edu.vt.middleware.crypt.signature.SignatureCli $@